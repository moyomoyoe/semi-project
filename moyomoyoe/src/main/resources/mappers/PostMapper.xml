<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="moyomoyoe.board.model.dao.PostMapper">

    <resultMap id="postResultMap" type="moyomoyoe.board.model.dto.PostDTO">
        <id property="postId" column="post_id"/>
        <result property="title" column="title"/>
        <result property="context" column="context"/>
        <result property="nickname" column="nickname"/>
        <result property="postDate" column="post_date"/>
        <result property="userOpen" column="user_open"/>
        <result property="regionCode" column="region_code"/>
        <result property="imageId" column="image_id"/>
        <result property="keywordId" column="keyword_id"/>
    </resultMap>
    
    <resultMap id="regionResultMap" type="moyomoyoe.board.model.dto.RegionDTO">
        <id property="regionCode" column="region_code"/>
        <result property="city" column="city"/>
        <result property="district" column="district"/>
    </resultMap>

    <!-- 전체메뉴 쿼리 -->
    <select id="findAllPost" resultMap="postResultMap">
        SELECT
            post_id,
            title,
            context,
            nickname,
            post_date,
            user_open,
            region_code,
            image_id,
            keyword_id
        FROM
            tbl_post_list
    </select>

    <!-- 키워드 쿼리 -->
    <select id="findKeywordPost" parameterType="int" resultMap="postResultMap">
        SELECT
            post_id,
            title,
            context,
            nickname,
            post_date,
            user_open,
            region_code,
            image_id,
            keyword_id
        FROM
            tbl_post_list
        WHERE
            keyword_id = #{keywordId}
    </select>

    <!-- 지역 쿼리-->
    <select id="findRegionPost" resultMap="regionResultMap">
        SELECT
            city,
            district
        FROM
            tbl_region
    </select>

</mapper>